<!DOCTYPE html>
<html>
<head>
  <title>Flickr Slideshow</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% form_tag do %>
    <%= label_tag(:name, "Name:") %>
    <%= text_field_tag(:my_name) %>
    <%= label_tag(:tags, "Tags:") %>
    <%= text_field_tag(:tags) %>
    <%= submit_tag("Make slideshow") %>
<% end %>

<%= form_tag("/search", :method => "get") do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
<% end %>

</body>
</html>
